<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 감정 선택 화면을 위한 Material 테마 -->
    <style name="Theme.EmotionSync.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Material 카드뷰 스타일 -->
    <style name="EmotionCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#40FFFFFF</item>
        <item name="cardBackgroundColor">#30FFFFFF</item>
    </style>

    <!-- Material 버튼 스타일 -->
    <style name="MaterialEmotionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#40FFFFFF</item>
        <item name="backgroundTint">#66FF5252</item>
    </style>
</resources> 