<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.EmotionSync" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- AppCompat 테마로 복원 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/app_logo_background</item>
        <item name="android:navigationBarColor">@color/app_logo_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="EmotionButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#EEEEEE</item>
        <item name="android:textColor">#212121</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/btn_rounded</item>
    </style>

    <!-- 앱 아이콘 스타일 -->
    <style name="AppIconStyle">
        <item name="android:background">@drawable/app_icon_background</item>
    </style>

</resources>