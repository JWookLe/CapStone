<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmotionSync"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLoginTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login an account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter your account to login for this app"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/textLoginTitle"
        app:layout_constraintStart_toStartOf="@id/textLoginTitle"
        app:layout_constraintEnd_toEndOf="@id/textLoginTitle"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_outline_background3"
        android:fontFamily="@font/montserrat_regular"
        android:hint="아이디"
        android:inputType="text"
        android:padding="16dp"
        android:minHeight="56dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        app:layout_constraintStart_toStartOf="@id/textDescription"
        app:layout_constraintEnd_toEndOf="@id/textDescription"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="16dp"
        android:minHeight="56dp"
        android:background="@drawable/button_outline_background3"
        android:fontFamily="@font/montserrat_regular"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextId"
        app:layout_constraintStart_toStartOf="@id/editTextId"
        app:layout_constraintEnd_toEndOf="@id/editTextId"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Continue"
        android:textSize="16sp"
        android:background="@drawable/button_outline_background2"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        app:layout_constraintStart_toStartOf="@id/editTextPassword"
        app:layout_constraintEnd_toEndOf="@id/editTextPassword"/>

    <LinearLayout
        android:id="@+id/layoutDivider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
        app:layout_constraintStart_toStartOf="@id/buttonLogin"
        app:layout_constraintEnd_toEndOf="@id/buttonLogin">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#80FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#80FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonGoogleLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Continue with Google"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_google_logo"
        android:paddingStart="16dp"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_outline_background3"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/layoutDivider"
        app:layout_constraintStart_toStartOf="@id/layoutDivider"
        app:layout_constraintEnd_toEndOf="@id/layoutDivider"/>

    <Button
        android:id="@+id/buttonKakaoLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Continue with Kakao"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_kakao_logo"
        android:paddingStart="16dp"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/button_outline_background3"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/buttonGoogleLogin"
        app:layout_constraintStart_toStartOf="@id/buttonGoogleLogin"
        app:layout_constraintEnd_toEndOf="@id/buttonGoogleLogin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/buttonKakaoLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="아이디/비밀번호 찾기"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@android:color/white"
            android:alpha="0.6"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/buttonJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="회원가입"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
