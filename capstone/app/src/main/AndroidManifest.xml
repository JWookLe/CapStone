<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.EmotionSync">

    <!-- 인터넷 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmotionSync"
        android:networkSecurityConfig="@xml/network_security_config">


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".JoinActivity"
            android:exported="false" />

        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.EmotionSync.Material" />

        <activity
            android:name=".FindAccountActivity"
            android:exported="false" />

        <activity
            android:name=".FindIdActivity"
            android:exported="false" />

        <activity
            android:name=".FindPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".FriendRequestListActivity"
            android:exported="false" />

        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".ContentRecommendationActivity"
            android:exported="false" />

        <activity
            android:name=".ContentDetailActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="emotion-sync"
                    android:host="content"
                    android:pathPattern="/.*/.*" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MyInfoActivity"
            android:exported="false" />

        <activity
            android:name=".UserDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".DeleteReasonActivity"
            android:exported="false" />

        <activity
            android:name=".VerifyPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false" />

        <activity
            android:name=".EmotionSurveyActivity"
            android:exported="false" />

        <activity
            android:name=".FriendListActivity"
            android:exported="false" />

        <activity
            android:name=".AddFriendActivity"
            android:exported="false" />

        <activity
            android:name="com.example.EmotionSync.ChatRoomActivity"
            android:exported="false" />

        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="kakaod998147f83d262022abfc49f600d81bc"
                    android:host="oauth" />
            </intent-filter>
        </activity>



        <activity android:name=".AlertActivity" />

        <activity android:name=".MatchRateFriendListActivity" />
        <activity android:name=".MatchRateDetailActivity" />

    </application>

</manifest>